%html
  %head
  %title
    -if @page_title
      =@page_title+' - '
    微博
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag 
  %body
    #banner
      - if user_signed_in?
        Welcom 
        =current_user.name
      =link_to t('.Home'), root_url
      - if user_signed_in?
        = link_to(t('.logout'), destroy_user_session_path)
        = link_to(t('.edit_registration'), edit_user_registration_path)
      -else
        = link_to(t('.login'), new_user_session_path)
    %p.alert=alert
    - if flash[:success]
      .notification#success
        %span.close x
        %div= flash[:success]              
    - if flash[:error]
      .notification#error
        %span.close x
        %div= flash[:error]              
    - if flash[:notice]
      .notice.flash
        = flash[:notice]
        %span.close x
    %p.deney=@deney
    = yield