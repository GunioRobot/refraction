!!! 5
%html
  %head
  %title
    -if @page_title
      =@page_title+' - '
    Weibo
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag 
  %body
    #banner
      - if user_signed_in?
        Welcom 
        =current_user.name
      =link_to t('.Home'), root_url
      - if user_signed_in?
        = link_to(t('.logout'), destroy_user_session_path)
        = link_to(t('.edit_registration'), edit_user_registration_path)
      -else
        = link_to(t('.login'), new_user_session_path)
    %p.alert=alert
    - if flash[:success]
      .alert-message.success
        %a.close x
        %p= flash[:success]
    - if flash[:error]
      .alert-message.error
        %a.close x
        %p= flash[:error]
    - if flash[:notice]
      .alert-message.warning
        %a.close x
        %p= flash[:notice]
    %p.deney=@deney
    = yield
