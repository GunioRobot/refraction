=render 'admin/nav'

%h2
  All tweets
  =@count
-@tweets.each do |t|
  .admin_stweet
    =t.content
    %br
    -if t.user
      =link_to t.user.name, admin_user_url(t.user)
    -else
      =link_to t.site.site_name, t.site.base_uri
    =link_to t('.Delete'), admin_tweet_url(t),:method=>:delete, :confirm=>'Are you sure?'
    =t.created_at
    -unless t.user
      <font color='red'>Remote</font>
    %hr